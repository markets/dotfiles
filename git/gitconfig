[color]
  diff    = auto
  status  = auto
  branch  = auto
  ui      = true

[core]
  excludesfile = ~/.gitignore

[alias]
  st      = status
  ci      = commit
  br      = branch
  co      = checkout
  df      = diff
  cl      = clone
  lg      = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  last    = log -1 HEAD
  tags    = tag -l
  remotes = remote -v

[push]
  default = simple

[pull]
  default = simple
